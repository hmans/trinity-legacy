{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
